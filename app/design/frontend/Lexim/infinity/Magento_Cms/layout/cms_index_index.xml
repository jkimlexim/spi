<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs" remove="true"/>
        <referenceBlock name="page.main.title" remove="true"/>

        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="opengraph.home" template="Magento_Cms::opengraph/general.phtml"/>
        </referenceBlock>

        <!-- Remove sidebar -->
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="multiple-wishlist_sidebar" remove="true"/>
        <referenceBlock name="sale.reorder.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
        <referenceContainer name="div.sidebar.additional" remove="true"/>
    </body>
</page>
