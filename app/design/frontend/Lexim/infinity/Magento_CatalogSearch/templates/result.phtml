<div class="search-page-title">
    <p>Your search phrase was "<span class="search-query-txt"></span>" - Showing results for "<span class="search-query-txt"></span>"</p>
</div>

<?php if ($block->getResultCount()): ?>
<?= $block->getChildHtml('tagged_product_list_rss_link') ?>
<div class="search results">
    <?php if ($messages = $block->getNoteMessages()):?>
    <div class="message notice">
        <div>
            <?php foreach ($messages as $message):?>
                <?= $message ?><br />
            <?php endforeach;?>
        </div>
    </div>
    <?php endif; ?>
    <?= $block->getProductListHtml() ?>
</div>
<?php else: ?>

<div class="message notice">
    <div>
        <?= ($block->getNoResultText()) ? $block->getNoResultText() : __('Your search returned no results.') ?>
        <?= $block->getAdditionalHtml() ?>
        <?php if ($messages = $block->getNoteMessages()):?>
            <?php foreach ($messages as $message):?>
                <br /><?= $message ?>
            <?php endforeach;?>
        <?php endif; ?>
    </div>
</div>
<?php endif; ?>
