<?php if ($detailedInfoGroup = $block->getGroupChildNames('detailed_info', 'getChildHtml')): ?>
    <div class="product info detailed">
        <?php $layout = $block->getLayout(); ?>
        <div class="product data items" data-mage-init='{"tabs":{"openedState":"active"}}'>
            <div class="descriptionLabelTab">
                <?php foreach ($detailedInfoGroup as $name): ?>
                    <?php
                    $html = $layout->renderElement($name);
                    if (!trim($html)) {
                        continue;
                    }
                    $alias = $layout->getElementAlias($name);
                    $label = $block->getChildData($alias, 'title');
                    ?>
                    <div class="data item title"
                         aria-labeledby="tab-label-<?= $alias ?>-title"
                         data-role="collapsible" id="tab-label-<?= $alias ?>">
                        <a class="data switch" tabindex="-1" data-toggle="switch"
                           href="#<?= $alias ?>" id="tab-label-<?= $alias ?>-title">
                            <?= $label ?>
                        </a>
                    </div>
                <?php endforeach; ?>
            </div>

            <div class="descriptionContentTab">
                <?php foreach ($detailedInfoGroup as $name): ?>
                    <?php
                    $html = $layout->renderElement($name);
                    if (!trim($html)) {
                        continue;
                    }
                    $alias = $layout->getElementAlias($name);
                    ?>
                    <div class="data item content" id="<?= $alias ?>" data-role="content">

                        <?php if ($alias === 'reviews') { ?>
                            <?= $block->getChildHtml('review.custom'); ?>
                        <?php } ?>

                        <?= $html ?>

                    </div>

                <?php endforeach; ?>
            </div>
        </div>
    </div>
<?php endif; ?>
