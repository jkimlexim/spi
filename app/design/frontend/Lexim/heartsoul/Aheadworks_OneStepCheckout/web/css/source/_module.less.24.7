//
//  Variables
//  _____________________________________________

@medium-turquoise: #3bc1cc;
@letter-spacing: 0.02em;
@aw-osc-font-family__base: 'ProximaNova', 'Helvetica Neue', Helvetica, Arial, sans-serif;
@aw-osc-font-size__base: 26px;
@aw-osc-line-height__base: 1.43;
@aw-osc-primary__color: #3e3935;
@aw-osc-primary__color__darker: #3e3935;
@aw-osc-primary__color__lighter: lighten(@aw-osc-primary__color, 10%);
@aw-osc-secondary__color: @medium-turquoise; // Use @theme-color for Porto blue color
@aw-osc-border-color__base: #d8d8d8;
@aw-osc-border-width__base: @border-width__base;
@aw-osc-border-radius__base: 0px;
@aw-osc-label__float__color: #3e3935;
@aw-osc-h2__font-size: 28px;
@aw-osc-background-color__base: #dbd9d6;
@aw-osc-background-color__active: @medium-turquoise;
@aw-osc-link__color: @medium-turquoise;
@aw-osc-supplementary__padding: 50px;
@aw-osc-sidebar__image__size: 140px;

//
//  Fonts
//  _____________________________________________

.lib-font-face(
    @family-name: 'aw-osc_icons-font',
    @font-path: '@{baseDir}Aheadworks_OneStepCheckout/css/icons-font/fonts/aw-osc_icons-font',
    @font-weight: normal,
    @font-style: normal
);

//
//  Common
//  _____________________________________________

& when (@media-common = true) {

    //.onestepcheckout-index-index .page-main .aw-onestep-main .email .form-login input:-webkit-autofill,
    //.onestepcheckout-index-index .page-main .aw-onestep-main .email .form-login input:-webkit-autofill:hover,
    //.onestepcheckout-index-index .page-main .aw-onestep-main .email .form-login input:-webkit-autofill:focus,
    //.onestepcheckout-index-index .page-main .aw-onestep-main .email .form-login input:-webkit-autofill:active,
    .onestepcheckout-index-index .page-main input:-webkit-autofill,
    .onestepcheckout-index-index .page-main input:-webkit-autofill:hover,
    .onestepcheckout-index-index .page-main input:-webkit-autofill:focus,
    .onestepcheckout-index-index .page-main input:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px white inset !important;
        -moz-box-shadow: 0 0 0 30px white inset !important;
        box-shadow: 0 0 0 30px white inset !important;
    }

    .onestepcheckout-index-index {
        * {
            letter-spacing: @letter-spacing;
            font-family: @aw-osc-font-family__base;
        }

        // Header
        .page-header {
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            border: none;

            .logo {
                -webkit-justify-content: center;
                justify-content: center;
            }

            .payment-method-content,
            .header.content {
                padding: 0 3.8vw;
                width: 100%;
                max-width: 100%;

                .header-container {
                    padding: 15px 0;
                    border-bottom: 1px solid #999999;
                    display: block;
                    width: 100%;
                    min-height: 110px;
                }
            }

            .rightHeader {
                display: none;
            }
        }

        // End header

        // Footer
        .page-footer {
            display: none;
        }

        .opc-estimated-wrapper {
            padding: 20px 0;
        }

        .field-tooltip .field-tooltip-action {
            display: none;
        }

        .newsletter {
            display: none;
        }

        .custom-save-cc {
            display: -webkit-flex;
            display: -moz-flex;
            display: -ms-flex;
            display: -o-flex;
            display: flex;
            -webkit-align-items: center;
            align-items: center;
            margin-top: -30px;
            padding: 0 0 40px;

            .custom-close {
                position: relative;
                width: 30px;
                height: 30px;
                border: 1px solid #bfbfbf;
                text-align: center;
                display: -webkit-flex;
                display: -moz-flex;
                display: -ms-flex;
                display: -o-flex;
                display: flex;
                -webkit-align-items: center;
                align-items: center;
                -webkit-justify-content: center;
                justify-content: center;
                margin-right: 20px;
            }

            > span {
                font-size: 16px;
                color: #3e3935;
            }
        }

        .nav-toggle {
            display: none !important;
        }

        .columns.main {
            width: 100%;
        }

        div.mage-success[generated] {
            .lib-form-validation-note(
                @_note-color: @color-dark-green1
            );
        }

        .page-title {
            margin-bottom: 40px;
            font-size: 32px;
            font-weight: bold;
            color: #3e3935;
        }

        .aw-onestep-description {
            .lib-css(color, @aw-osc-primary__color__lighter);
            margin-bottom: 15px;
        }

        // Page main
        .page-main {
            padding-left: 3.8vw;
            padding-right: 3.8vw;
            padding-bottom: 3.8vw;
            max-width: 100%;

            .checkout-container {
                .lib-css(color, @aw-osc-primary__color);
                font-size: 24px;
                .lib-vendor-prefix-display(flex);
                justify-content: space-between;
                margin: auto;

                img {
                    display: block;
                }

                label {
                    cursor: pointer;
                }

                .block-authentication {
                    .actions-toolbar {
                        display: flex;
                        flex-direction: row-reverse;
                        align-items: center;
                        width: 100%;
                        justify-content: space-between;
                        margin: 0;
                        flex-wrap: wrap;
                        padding: 0;

                        .secondary,
                        .secondary a {
                            padding: 0;
                            margin: 0;
                        }
                    }

                    .block[class] .field .control {
                        width: 100% !important;
                    }
                }

                .input-text, .select {
                    .lib-vendor-prefix-appearance(none);
                    .lib-form-element-input(@_type: input-text);
                    min-height: 44px;
                    box-shadow: none;
                    cursor: pointer;
                    padding: 0 50px;
                    font-size: 24px;
                    font-weight: bold;
                    color: @aw-osc-primary__color;
                    font-family: @aw-osc-font-family__base;
                    border: 1px solid #bfbfbf;

                    &.mage-error {
                        .lib-css(border, @aw-osc-border-width__base solid @form-validation-note__color-error);
                    }
                }

                .select {
                    padding-right: 30px;
                    background-repeat: no-repeat !important;
                    background-position: calc(~'100% - 10px') 50% !important;
                    background: url(../Aheadworks_OneStepCheckout/images/arrow_down.svg);
                    background-size: 13px !important;
                }

                input[type='checkbox'],
                input[type='radio'] {
                    display: none;

                    + label:before {
                        content: '';
                        display: inline-block;
                        float: left;
                        margin-right: 0;
                        margin-left: 0;
                        vertical-align: middle;
                        margin-top: 0;
                        height: 17px;
                    }
                }

                input[type='checkbox'] {
                    + label:before {
                        content: '\e903';
                        font-family: 'aw-osc_icons-font';
                        font-size: 17px;
                        -webkit-font-smoothing: antialiased;
                        -moz-osx-font-smoothing: grayscale;
                        color: @aw-osc-secondary__color;
                    }

                    &:checked + label:before {
                        content: '\e906';
                        font-family: 'aw-osc_icons-font';
                        font-size: 17px;
                        -webkit-font-smoothing: antialiased;
                        -moz-osx-font-smoothing: grayscale;
                        color: @aw-osc-secondary__color;
                    }

                    &:disabled + label {
                        opacity: .3;
                    }
                }

                input[type='radio'] {
                    + label:before {
                        content: '\e90a';
                        font-family: 'aw-osc_icons-font';
                        font-size: 17px;
                        -webkit-font-smoothing: antialiased;
                        -moz-osx-font-smoothing: grayscale;
                        color: @aw-osc-secondary__color;
                    }

                    &:checked + label:before {
                        content: '\e909';
                        font-family: 'aw-osc_icons-font';
                        font-size: 17px;
                        -webkit-font-smoothing: antialiased;
                        -moz-osx-font-smoothing: grayscale;
                        color: @aw-osc-secondary__color;
                    }

                    &:disabled + label {
                        opacity: .3;
                    }
                }

                th.mark {
                    font-weight: normal;
                }

                .field-tooltip {
                    right: 10px;
                    top: calc(~'50% - 15px') !important;
                }

                .field.fl-label-state,
                .field.fl-label[data-value-specified='1'] {

                    .input-text,
                    .select,
                    textarea {
                        outline: none;
                    }
                }

                .control {
                    width: 100%;
                    position: relative;
                }

                .field {
                    .lib-vendor-box-align(stretch);
                    .lib-vendor-prefix-display(flex);
                    .lib-vendor-prefix-flex-direction(column);
                    margin: 25px;
                    width: 100%;
                    position: relative;

                    &.field-phone {
                        margin-bottom: 0;
                    }

                    &._required,
                    &.required {
                        & > .control > .label:first-of-type > span:first-child,
                        & > .label:first-of-type > span:first-of-type,
                        & > .label.short > span:first-of-type {
                            &:after {
                                content: '*';
                                color: #3bc1cc;
                                font-size: 16px;
                                font-weight: bold;
                                margin-left: 4px;
                                height: 9px;
                                line-height: 1;
                            }
                        }

                        & > .label:after {
                            content: none;
                        }

                        legend.label span {
                            &:after {
                                content: '';
                                display: none;
                            }
                        }
                    }

                    &._error {
                        .input-text,
                        .select {
                            .lib-css(border, @aw-osc-border-width__base solid @form-validation-note__color-error);
                        }
                    }

                    &.addresses {
                        margin: auto;
                        width: calc(~'100% - 10px');
                    }

                    &.choice {
                        .lib-vendor-prefix-flex-direction(row);
                        font-size: 13px;
                        margin: 0;
                    }

                    label.label {
                        height: 15px;
                        line-height: 1;
                        background: #ffffff;
                        display: block !important;
                        width: auto !important;
                        position: absolute !important;
                        top: -7px;
                        left: 40px;
                        padding: 0 10px;
                        font-size: 14px;
                        color: @aw-osc-primary__color;
                        font-weight: bold;
                        z-index: 2;

                        > span {
                            display: -webkit-flex;
                            display: -moz-flex;
                            display: -ms-flex;
                            display: -o-flex;
                            display: flex;
                            -webkit-align-items: center;
                            align-items: center;
                        }
                    }
                }

                .onestep-shipping-method-list {
                    label.label {
                        height: 40px !important;
                        line-height: 1 !important;
                        background: transparent;
                        display: block !important;
                        width: 100% !important;
                        position: absolute !important;
                        top: 7px;
                        left: 0;
                        padding: 0;
                    }
                }

                .field-row,
                fieldset.field.street .control {
                    .lib-vendor-box-align(flex-start);
                    .lib-vendor-prefix-display(flex);
                    justify-content: space-between;
                }

                .saveForNextTime,
                .saveForNextTime .control {
                    position: relative;
                }

                .onestep-billing-address .choice label.label,
                .saveForNextTime .control label.label {
                    position: relative !important;
                    left: 0;
                    padding: 0;
                    display: -webkit-flex !important;
                    display: -moz-flex !important;
                    display: -ms-flex !important;
                    display: -o-flex !important;
                    display: flex !important;
                    -webkit-align-items: center;
                    align-items: center;
                    height: 30px;
                }

                .onestep-billing-address .choice label.label > span,
                .saveForNextTime .control label.label > span {
                    margin-left: 30px;
                    margin-top: 10px;
                    font-size: 15px;
                    color: @aw-osc-primary__color;
                    font-weight: normal;

                }

                .onestep-billing-address input[type='checkbox'] + label:before,
                .saveForNextTime .control input[type='checkbox'] + label:before {
                    color: transparent !important;
                    border: 1px solid #bfbfbf;
                    width: 30px;
                    height: 30px;
                }

                .onestep-billing-address input[type='checkbox'] ~ .label:after,
                .onestep-billing-address input[type='checkbox']:checked + label:after,
                .saveForNextTime .control input[type=checkbox]:checked ~ .label:after,
                .saveForNextTime .control input[type='checkbox']:checked + label:after {
                    width: 30px;
                    line-height: 30px;
                    left: 0;
                    top: 2px;
                    color: @aw-osc-primary__color;
                }

                .place-order-wrapper {
                    position: relative;
                    display: -webkit-flex;
                    display: -moz-flex;
                    display: -ms-flex;
                    display: -o-flex;
                    display: flex;
                    width: 100%;
                    -webkit-align-items: flex-end;
                    align-items: flex-end;

                    .error-place-order {
                        color: #c90d15;
                        font-size: 22px;
                        font-weight: bold;
                        padding-left: 2.5vw;
                    }
                }
            }

            // Left column
            .aw-onestep-main {
                .lib-vendor-box-align(flex-start);
                .lib-vendor-prefix-display(flex);
                .lib-vendor-prefix-flex-direction(column);
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box;
                box-sizing: border-box;
                -webkit-justify-content: flex-start;
                justify-content: flex-start;
                width: 69%;
                padding-right: 6.56vw;

                .aw-onestep-groups {
                    counter-reset: i;
                    margin: 0;
                    padding: 0;
                    width: 100%;

                    .aw-onestep-groups_item {
                        list-style-type: none;
                        width: 100%;
                        position: relative;
                        overflow: hidden;
                        padding-top: 3vw;

                        &.shipping-method {
                            max-width: 47.5%;
                        }

                        &.payment-methods {
                            max-width: 100%;

                            div[data-role="payment-methods-load"] {
                                max-width: 47.5%;
                            }
                        }

                        .group-title {
                            h2 {
                                font-size: 28px;
                                font-weight: 600;
                                text-transform: uppercase;
                                margin: 0 0 20px;
                            }

                            .mark {
                                &:after {
                                    content: ".";
                                    padding-right: 10px;
                                }

                                &:before {
                                    content: counter(i);
                                    counter-increment: i;
                                }
                            }
                        }
                    }

                    & > .amazon-button-container {
                        margin-top: 10px;
                    }
                }

                .email {
                    max-width: 100%;
                    width: 100%;

                    .form-login {
                        #customer-email-fieldset .field-email {
                            position: relative;
                            margin: 15px 0 0;
                            width: 100%;
                            display: block;
                        }

                        .field-email-inner {
                            position: relative;
                            width: 100%;
                            max-width: calc(~'50% - 25px');
                            float: left;
                            margin: 0 0 20px;

                            &.slot2 {
                                float: right;
                            }

                            label.label > span:after {
                                content: '*';
                                color: #3bc1cc;
                                font-size: 16px;
                                font-weight: bold;
                                margin-left: 4px;
                                height: 9px;
                                line-height: 1;
                            }
                        }

                        .hidden-fields {
                            width: 100%;
                        }
                    }

                    .field {
                        margin: 20px 0;

                        .field-tooltip.toggle {
                            display: none;
                            top: 7px !important;
                        }
                    }

                    .note {
                        margin: 0;
                        width: 100%;
                        padding: 20px 0;
                        line-height: 2;
                        display: block;
                        font-size: 16px;
                        clear: both;
                    }

                    .actions-toolbar {
                        button.action.primary {
                            margin-right: 20px;
                        }
                    }
                }

                .email .form,
                .payment-method .form,
                .authentication {
                    margin: 0;
                }

                .authentication-notice, .authentication-link {
                    display: inline;
                    font-size: 20px;
                }

                // Shipping Address - Billing address
                .onestep-shipping-address, .onestep-billing-address {
                    margin: 0 -25px;

                    .field-row {
                        display: block;
                        position: relative;
                        width: 50%;
                        float: left;

                        > .field {
                            display: block;
                            position: relative;
                            margin: 0;
                            padding: 25px;
                            width: 100%;

                            &[name="shippingAddress.country_id"], &[name="billingAddress.country_id"] {
                                visibility: hidden;
                                height: 0;
                                margin: 0;
                                padding: 0;
                            }

                            div.mage-error[generated], .required-message, p.message.error {
                                position: absolute;
                                bottom: 0;
                                left: auto;
                            }
                        }

                        > fieldset.field {
                            padding: 0;
                        }
                    }

                    form.form > .field-row:nth-child(1),
                    form.form > .field-row:nth-child(2) {
                        width: 100%;
                    }

                    form.form > .field-row:nth-child(1) > .field {
                        width: 50%;
                        float: left;
                    }

                    // address
                    form.form > .field-row:nth-child(2) > fieldset .field {
                        width: 50%;
                        float: left;
                        padding: 25px;
                        margin: 0;
                    }
                }

                .onestep-shipping-address .new-shipping-address-form,
                .onestep-billing-address {

                    .action-toolbar {
                        padding: 0 25px;
                    }
                }

                .onestep-billing-address .action-toolbar,
                .onestep-shipping-address .action-toolbar {
                    .lib-vendor-box-align(center);
                    .lib-vendor-prefix-display(flex);
                    .lib-vendor-prefix-flex-direction(row-reverse);
                    justify-content: flex-start;
                    margin-bottom: 20px;
                    margin-top: 35px;

                    .action {
                        margin: 5px;
                        text-align: center;
                    }
                }

                .onestep-billing-address .choice {
                    padding: 0 25px;
                    margin: 0;
                }

                .onestep-shipping-address .choice {
                    margin: 20px 5px;
                    width: inherit;
                }

                .new-shipping-address-form {
                    font-size: 14px;
                    font-weight: normal;
                    margin: 0;

                    .title {
                        cursor: pointer;
                        padding-left: 25px;
                        position: relative;
                        margin-bottom: 10px;

                        strong {
                            font-weight: 400;
                            .lib-css(color, @aw-osc-link__color);

                            &:hover {
                                text-decoration: underline;
                            }
                        }

                        &:before {
                            .lib-css(background-color, @aw-osc-link__color);
                            background-size: cover;
                            content: '';
                            display: inline-block;
                            margin-right: 3px;
                            height: 10px;
                            left: 0;
                            top: 0;
                            width: 10px;
                            mask-image: url(../Aheadworks_OneStepCheckout/images/plus.svg);
                            -webkit-mask-image: url(../Aheadworks_OneStepCheckout/images/plus.svg);
                        }
                    }
                }

                .billing-address-details {
                    .lib-vendor-prefix-display(flex);
                    .lib-vendor-prefix-flex-direction(column);
                    .lib-vendor-box-align(flex-start);
                    justify-content: flex-start;
                    -webkit-box-sizing: border-box;
                    -moz-box-sizing: border-box;
                    box-sizing: border-box;
                    margin: 25px;
                    padding: 15px;
                    position: relative;
                    width: 45.5%;
                    font-size: 15px;

                    .action-edit-address {
                        .lib-button-as-link(
                            @_link-color: @aw-osc-link__color,
                            @_link-color-hover: @aw-osc-link__color
                        );
                        box-shadow: none;
                        font-weight: 400;
                    }
                }

                .shipping-address-items {
                    ol {
                        .lib-vendor-box-align(stretch);
                        .lib-vendor-prefix-display(flex);
                        .lib-vendor-prefix-flex-direction(row);
                        .lib-vendor-prefix-flex-wrap(wrap);
                        justify-content: space-between;
                        list-style-type: none;
                        padding: 0;

                        .shipping-address-item {
                            -webkit-box-sizing: border-box;
                            -moz-box-sizing: border-box;
                            box-sizing: border-box;
                            margin: 25px;
                            padding: 15px;
                            position: relative;
                            width: 45.5%;
                            font-size: 22px;

                            &.not-selected-item {
                                &:hover {
                                }

                                .edit-address-link {
                                    display: none;
                                }
                            }

                            .edit-address-link,
                            .action-select-shipping-item {
                                .lib-button-as-link(
                                    @_link-color: @aw-osc-link__color,
                                    @_link-color-hover: @aw-osc-link__color
                                );
                                box-shadow: none;
                                .lib-vendor-prefix-display(flex);
                                .lib-vendor-box-align(flex-start);
                                .lib-vendor-prefix-flex-direction(column);
                                .lib-css(justify-content, flex-end, 1);
                                bottom: 0;
                                left: 0;
                                width: 100%;
                                height: 100%;
                                box-shadow: none;
                                font-size: 13px;
                                font-weight: normal;
                                outline: none;
                                position: absolute;
                                text-indent: 20px;

                                span {
                                    position: absolute;
                                    bottom: 18px;
                                    left: 0;
                                }

                                &:hover {
                                    text-decoration: none;
                                }
                            }
                        }
                    }
                }

                .field-select-billing {
                    margin: 0;
                    width: 100%;
                    padding: 25px;
                }

                .payment-method {
                    .payment-method-content {
                        fieldset.fieldset {
                            > legend.legend {
                                display: none;
                            }

                            > .field {
                                margin-bottom: 50px;

                                label.label[for=authnetcim-cc-type] {
                                    display: none !important;
                                }
                            }
                        }

                        .label {
                            width: initial;
                        }
                    }

                    &._active {
                        .payment-method-title {
                            .lib-css(background-color, transparent);
                        }

                        .payment-method-content {
                            height: inherit;
                            opacity: 1;
                            visibility: visible;

                            .form {
                                display: block;
                            }

                            .label {
                                width: initial;
                            }
                        }

                        .fields.group-2 {
                            .lib-vendor-box-align(center);
                            .lib-vendor-prefix-display(flex);
                            .lib-vendor-prefix-flex-direction(row);
                            justify-content: space-between;

                            .field {
                                max-width: calc(~'50% - 25px');

                                .label {
                                    &.short {
                                        display: none;
                                    }
                                }
                            }
                        }
                    }

                    &.payment-method-braintree,
                    #adyen-cc-form {
                        .field.choice {
                            .lib-vendor-prefix-flex-direction(row-reverse);

                            .label {
                                left: 0;
                                padding-left: 0;
                                pointer-events: auto;

                                &:before {
                                    margin-left: 0;
                                }
                            }
                        }
                    }

                    #adyen-cc-form {
                        .field.choice {
                            margin-top: 10px;
                        }

                        label[for=adyen_cc_cc_type] {
                            display: none;
                        }
                    }

                    .adyen_oneclick {
                        .field.number {
                            &:first-of-type,
                            &.expire-update {
                                .label {
                                    padding-left: 0;
                                    position: static;
                                }

                                .control {
                                    margin: 0 0 12px 0;
                                    width: initial;

                                    a {
                                        cursor: pointer;
                                    }
                                }
                            }
                        }
                    }

                    &.payment-method-braintree {
                        .form .field {
