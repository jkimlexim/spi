<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="binaryanvil_jobmanager" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Job Manager</label>
            <tab>binaryanvil</tab>
            <resource>BinaryAnvil_Base::binaryanvil_base</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Settings</label>
                <frontend_model>BinaryAnvil\JobManager\Block\Adminhtml\About</frontend_model>
                <field id="is_enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="debug_mode" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Debug Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="jobs" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Jobs Settings</label>
                <field id="attempts" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Attempts</label>
                    <comment>Number of attempts before set job as failed. (default = 1)</comment>
                </field>
                <field id="limit" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Jobs Limit</label>
                    <comment>Number of jobs to be executed per one run. (default = 10)</comment>
                </field>
            </group>
            <group id="purge" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Jobs Purging</label>
                <field id="strategy" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Purge Strategy</label>
                    <source_model>BinaryAnvil\JobManager\Model\Config\Source\PurgeStrategy</source_model>
                </field>
                <field id="executed" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Purge Executed Jobs</label>
                    <comment>In days. Default 15 days.</comment>
                    <depends>
                        <field id="binaryanvil_jobmanager/purge/strategy">1</field>
                    </depends>
                </field>
                <field id="error" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Purge Error Jobs</label>
                    <comment>In days. Default 30 days.</comment>
                    <depends>
                        <field id="binaryanvil_jobmanager/purge/strategy">1</field>
                    </depends>
                </field>
                <field id="archive_keep" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Keep Archive Records for</label>
                    <comment>In days. Default 90 days since job was created.</comment>
                    <depends>
                        <field id="binaryanvil_jobmanager/purge/strategy">2</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
